<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".NewsDetailsPage">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <ImageView
            android:id="@+id/news_image_detail"
            android:layout_height="112dp"
            android:layout_width="112dp"
            />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/news_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/news_publisonhDate_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_title_detail"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/news_text_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_below="@id/news_title_detail"
            />
        <TextView
            android:id="@+id/news_source_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_text_detail"
            android:layout_marginVertical="20dp"
            android:textColor="@color/colorLinkPrimary"
            android:linksClickable="true"
            />
        <TextView
            android:id="@+id/news_categories_detail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/news_source_detail"
            />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>